---
interface Props {
  title: string;
  image: any;
  url: string;
  tags?: Array<string>;
  red: boolean;
}

const { title, image, url, tags, red } = Astro.props;
---

<div
  class={"flex flex-col items-center rounded-lg  p-4 text-[--paper] bg-[--damask] shadow-xl"}
>
  <a href={url} class="font-bold text-3xl mb-2">
    {title}
  </a>
  <div class="h-full flex items-center justify-center">
    <a href={url} class={"border-2 border-[--paper] "}>
      {image}
    </a>
  </div>
</div>
