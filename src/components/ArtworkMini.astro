---
interface Props {
  title: string;
  image: any;
  url: string;
  tags?: Array<string>;
  red: boolean;
}

const { title, image, url, tags, red } = Astro.props;
---

<div
  class={"flex flex-col items-center  p-4 text-[--paper] " +
    (red ? "bg-[--red]" : "bg-[--damask] shadow-xl")}
>
  <a href={url} class="font-bold text-3xl mb-auto">
    {title}
  </a>
  <div class="h-full flex items-center justify-center">
    <a href={url} class={"border-4 border-[--paper] "}>
      {image}
    </a>
  </div>
</div>
