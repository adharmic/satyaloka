---
import Navigator from "./Navigator.astro";
import HeroText from "./HeroText.astro";
import Separator from "./decorations/Separator.astro";
---

<div
  class="flex max-h-fit lg:flex-row flex-col items-center justify-center lg:items-start lg:justify-start"
>
  <HeroText />
  <Navigator />
</div>
<div class="flex flex-col gap-2 items-end">
  <Separator />
  <ul
    class="font-['Faculty'] font-bold flex items-center justify-evenly w-full overflow-x-scroll gap-2 text-xs sm:text-xl"
  >
    <li class="hover:underline transition-all hover:text-[--red]">
      <a href="/artwork">ARTWORK</a>
    </li>
    <li class="hover:underline transition-all hover:text-[--red]">
      <a href="/articles">ARTICLES</a>
    </li>
    <li class="hover:underline transition-all hover:text-[--red]">
      <a href="/appraisals">APPRAISALS</a>
    </li>
    <li class="hover:underline transition-all hover:text-[--red]">
      <a href="/analyses">ANALYSES</a>
    </li>
  </ul>
  <Separator />
</div>
