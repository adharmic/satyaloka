---
interface Props {
  title: string;
  image: any;
  url: string;
  description?: string;
}

const { title, image, url, description } = Astro.props;
---

<style>
  .wrapper {
    background-color: var(--paper);
  }
</style>
<div
  class="wrapper drop-shadow-lg font-['Darwin'] text-[32px] mt-8 font-bold text-[--page] border-4 border-[--background]"
>
  <a
    href={url}
    class="w-full bg-[--damask] text-[--paper] flex items-center mb-2 pt-2 pl-2 pr-2"
  >
    {title}
  </a>
  <div class="flex flex-col sm:flex-row items-center justify-center gap-8 p-4">
    <a
      href={url}
      class="w-full border border-[--background] max-h-[300px] overflow-hidden"
    >
      {image}
    </a>
    <div
      class="w-full text-4 font-normal text-[--damask] text-ellipsis max-h-[20rem] overflow-hidden leading-10"
    >
      <p>{description}</p>
    </div>
  </div>
</div>
